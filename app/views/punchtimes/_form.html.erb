<%= form_with(model: punchtime, local: true) do |form| %>
  <% if punchtime.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(punchtime.errors.count, "error") %> prohibited this punchtime from being saved:</h2>

      <ul>
      <% punchtime.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <ol>
      <li class="required">
        <%= form.label :punch_type %>
        <%= form.radio_button :punch_type, 'punch in' %> Punch In
        <br>
        <%= form.radio_button :punch_type, 'punch out' %> Punch Out
      </li>
      <li class="required">
        <%= form.label :time %>
        <%= form.text_field :time, id: "time" %>
      </li>
      <li>
        <%= form.label :description, "Special Notes (optional)" %>
        <%= form.text_field :description %>
      </li>
    </ol>
    <p>
      <%= form.submit class: "button" %>
    </p>
  </fieldset>
<% end %>

<script type="text/javascript">
  const el = document.getElementById('time');
  flatpickr(el, {
    enableTime:      true,
    altInput:        true,
    minDate:         "today",
    altFormat:       "F j, Y at h:i K",
    dateFormat:      "Y-m-d H:i",
    minuteIncrement: 1
  });
</script>
