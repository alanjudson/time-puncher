<p id="notice"><%= notice %></p>
<p>
  <strong>User:</strong>
  <%= @punchtime.user.name %>
</p>
<p>
  <strong>Punch type:</strong>
  <%= @punchtime.punch_type %>
</p>

<p>
  <strong>Description:</strong>
  <% if @punchtime.description.present? %>
    <%= @punchtime.description %>
  <% else %>
    My day was nondescript.
  <% end %>
</p>

<p>
  <strong>Time:</strong>
  <%= @punchtime.time.strftime("%b %e, %l:%M %p") %>
</p>

<%= link_to 'Edit', edit_punchtime_path(@punchtime) %> |
<%= link_to 'Back', user_path(current_user) %>
