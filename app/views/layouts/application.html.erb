<!DOCTYPE html>
<html>
  <head>
    <title>Timepuncher</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "layouts/header" %>
    <div id="wrapper">
      <%= render "layouts/flashes" %>
      <div id="container">
        <section id="content">
          <%= yield %>
        </section>
      </div>
    </div>
  </body>
</html>
