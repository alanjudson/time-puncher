<article>
  <header>
    <h1><%= @user.name %></h1>
    <h2><%= @user.email %></h2>
  </header>
  <footer>
    <nav>
      <%= link_to "Edit Your Account", edit_user_path(@user), class: 'button' %>
      <%= link_to 'Delete your Account', @user, method: :delete, data: { confirm: 'You sure? Life is hard out there.' }, class: 'button' %>
    </nav>
  </footer>
</article>
